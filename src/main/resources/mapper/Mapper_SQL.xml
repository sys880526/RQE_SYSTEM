	<select id="bmtListEvent" parameterType="HashMap"  resultType="HashMap">
		select DISTINCT(to_date(starttm, 'yyyy-mm-dd hh24:mi:ss')) as start_day
			from bmt_total_info
			where userid in (
			select userid
	    from admin_user_list
		where adminid in (
		    select adminid
		    from admin_user_list 
		    where userid = #{userid} or adminid = #{userid}
		    )
			)
	</select>
	

